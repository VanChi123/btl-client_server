@model IEnumerable<BTL_ClientServer.Models.Entity.SanPham>
<table class="table  table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên Sản Phẩm </th>
            <th scope="col">Giá</th>
            <th scope="col"></th>
            <th scope="col">Hình Ảnh</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var img = (new BTL_ClientServer.Models.Functions.SanPham()).GetImageByProductId(item.Id)[0].TenAnh;
        <tr>
            <td><h3>@item.TenSanPham</h3></td>
            <td>@String.Format("Giá tiền 1 SP là: {0:0,00}", item.Gia) VND</td>
            <th><p>@item.DoiTuongSuDung</p></th>
            <td><img src="~/Content/User/img/product/@img" alt="Alternate Text" style="width:120px;height:120px;" class="img-responsive" /></td>
        </tr>
        }
    </tbody>
</table>





