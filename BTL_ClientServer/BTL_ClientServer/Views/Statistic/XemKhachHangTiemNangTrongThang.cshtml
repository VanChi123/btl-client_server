@model IEnumerable<BTL_ClientServer.Models.Dto.KhachHangDto1>
<table class="table table-striped table-dark" id="tb">
    <thead>
        <tr>
            <th scope="col">Số Lượng Hóa Đơn Đã Đặt</th>
            <th scope="col">Tổng Số Tiền Đã Thanh Toán</th>
            <th scope="col">Id Khách Hàng</th>
            <th scope="col">Tên Khách Hàng</th>
            <th scope="col">Giới Tính</th>
            <th scope="col">Địa Chỉ</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.SoLuong</td>
                <td>@String.Format("Số tiền là: {0:0,00}", item.TongTienDaTra) VND</td>
                <th>@item.Id</th>
                <td>@item.TenKhachHang</td>
                @if (item.GioiTinh == true)
                {
                    <td>Nam</td>
                }
                else
                {
                    <td>Nữ</td>
                }
                <td>@item.DiaChi</td>
            </tr>
        }
    </tbody>
</table>
