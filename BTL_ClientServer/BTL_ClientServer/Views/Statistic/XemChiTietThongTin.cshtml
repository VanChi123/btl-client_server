@model IEnumerable <BTL_ClientServer.Models.Dto.ChiTietThongTin>
@{ var tonggiam = Model.First().TienGiamHoaDon;
    var date = DateTime.Now.ToLocalTime();
    var tong = Model.First().TongTienPhaiTra;

}
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên Sản Phẩm </th>
            <th scope="col">Giá</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Tiền Giảm Giá</th>
            <th scope="col">Thành Tiền Sau Giảm Giá</th>
            <th scope="col">Thương Hiệu</th>
            <th scope="col">Loại Sản Phẩm</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@String.Format("{0:0,00}", item.Gia) VND</td>
                <td>@item.SoLuong</td>
                <td>@String.Format("{0:0,00}", item.TienGiamGia) VND</td>
                <td>@String.Format("{0:0,00}", item.ThanhTienSauGiamGia) VND</td>
                <td>@item.TenThuongHieu</td>
                <td>@item.TenLoaiSanPham</td>
            </tr>
        }
    </tbody>

</table>
<h3>Tiền Giảm Giá Cho Hóa Đơn: @String.Format("{0:0,00}", @tonggiam) VND</h3>
<h2>Tổng Tiền Thanh Toán @String.Format("{0:0,00}", @tong) VND</h2>
<hr />
<h3>Hôm nay là : @date</h3>
